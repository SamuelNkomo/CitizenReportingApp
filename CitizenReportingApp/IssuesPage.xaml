<Page x:Class="CitizenReportingApp.IssuesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CitizenReportingApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="IssuesPage">

    <Grid Margin="20">
        <!-- Title -->
        <TextBlock Text="Reported Issues" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,20"/>

        <!-- ListBox for displaying reported issues -->
        <ListBox x:Name="lstIssues" Width="400" Height="250" HorizontalAlignment="Center" Margin="0,20,0,20"/>

        <!-- View Details Button -->
        <Button x:Name="btnViewDetails" Content="View Details" Width="150" Height="40" Click="btnViewDetails_Click" HorizontalAlignment="Center"/>

        <!-- Issue Details Text -->
        <TextBlock x:Name="txtIssueDetails" Width="400" Height="150" TextWrapping="Wrap" HorizontalAlignment="Center" Margin="20"/>

        <!-- Back to Main Menu -->
        <Button Content="Back to Main Menu" Width="150" Height="40" Click="btnBackToMain_Click" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="20"/>
    </Grid>
</Page>